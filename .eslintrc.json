{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": ["warn", "unix"],
        "no-unused-vars": "warn",
        "prefer-const": "warn",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}
